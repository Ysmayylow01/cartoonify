<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?colorOnBackground"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/header_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/headerLayout"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">

        <FrameLayout
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="14dp"
                android:src="@drawable/ic_back" />
        </FrameLayout>

        <TextView
            style="@style/MainText_600_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:lines="1"
            android:text="Barlamak" />


    </LinearLayout>
    <Spinner
        android:id="@+id/spinnerApiKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/corner_layout"
        android:layout_marginHorizontal="20dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            app:shapeAppearanceOverlay="@style/cornerImage"
            android:src="@color/color_line_dark" />

        <FrameLayout
            android:id="@+id/btn_selectImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:background="@drawable/corner_background_6dp"
            android:backgroundTint="@color/color_primary"
            android:foreground="@drawable/ripple_corner_6_white"
            android:layout_marginTop="20dp">
            <TextView
                style="@style/MainText_600_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Surat saÃ½la"
                android:textColor="@color/color_white"
                android:padding="10dp"/>
        </FrameLayout>
    </LinearLayout>

    <Spinner
        android:id="@+id/spinnerType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:padding="20dp"/>
    <FrameLayout
        android:id="@+id/btn_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="34dp"
        android:background="@drawable/corner_stroke_dark"
        android:foreground="@drawable/ripple_corner_6_white"
        android:layout_marginTop="30dp">
        <TextView
            style="@style/MainText_600_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Barlamak"
            android:textColor="?attr/textFillColor"
            android:padding="10dp"/>
    </FrameLayout>
</LinearLayout>
